@model Usuario
@{
    ViewData["Title"] = "Deletar Usuário";
}
<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

</head>

<body>

    <div class="center divbox">
        <h2>Deletar Usuário</h2>
        <p>Informe o Id do usuário a ser deletado</p>
        <p id="pMensagem">@ViewBag.Mensagem</p>
        <form asp-action="Deletar" method="POST">
            <p>
                <label asp-for="Id">Id:</label>
                <input asp-for="Id" />
            </p>
            <p>
                <input type="submit" value="Deletar" />
            </p>
        </form>
    </div>

</body>

</html>
