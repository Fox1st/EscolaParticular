@model Usuario
@{
    ViewData["Title"] = "Deletar Usuário";
}
<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

</head>

<body>

    <div class="divbox">
        <h2>Deletar Usuário</h2>
        <p>Informe o Id do usuário a ser deletado</p>
        <form asp-action="Deletar" method="POST" id="userDel">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label">Id:</label>
                <div class="col-sm-10">
                    <input asp-for="Id" class="form-control" required/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="submit" value="Deletar" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>

</body>

</html>
