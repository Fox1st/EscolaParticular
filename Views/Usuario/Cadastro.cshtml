@model Usuario
@{
    ViewData["Title"] = "Cadastro";
}
<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

</head>

<body>

    <div class="left divbox">
        <h2>Cadastro de Usuário</h2>
        <p id="pMensagem">@ViewBag.Mensagem</p>
        <form asp-action="Cadastro" method="POST">
            <p>
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" />
            </p>
            <p>
                <label asp-for="Login">Login:</label>
                <input asp-for="Login" />
            </p>
            <p>
                <label asp-for="Senha">Senha:</label>
                <input asp-for="Senha" />
            </p>
            <p>
                <label asp-for="TipoUsuario">Tipo Usuário:</label>
                <input asp-for="TipoUsuario" />
            </p>
            <p>
                <input type="submit" value="Cadastrar" />
            </p>
        </form>
    </div>

</body>

</html>