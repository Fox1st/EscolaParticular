@model Usuario
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>

<html>

<body>

    <div class="divbox">
        <h2>Login</h2>
        <p id="pMensagem">@ViewBag.Mensagem</p>
        <form asp-action="Login" method="POST">
            <div class="form-group row">
                <label asp-for="Login" class="col-sm-2 col-form-label">Login:</label>
                <div class="col-sm-10">
                    <input asp-for="Login" class="form-control" required/>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Senha" class="col-sm-2 col-form-label">Senha:</label>
                <div class="col-sm-10">
                    <input asp-for="Senha" type="password" class="form-control" required/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="submit" value="Entrar" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>

</body>

</html>